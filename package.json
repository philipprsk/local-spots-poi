{
  "name": "local-spots-poi",
  "version": "2.1.0",
  "description": "First Typescript version of Local Spots POI",
  "license": "ISC",
  "type": "module",
  "author": "",
  "main": "dist/server.js",
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.ts",
    "node-option": [
      "import=tsx"
    ],
    "ui": "tdd"
  },
  "scripts": {
    "build": "tsc && cp -r src/views dist/ && cp -r src/public dist/",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint . --ext .ts",
    "test": "tsx --test \"test/**/*.ts\"",
    "testmodels": "mocha --loader tsx --ui tdd \"test/models/**/*.ts\"",
    "testapi": "mocha --loader tsx --ui tdd \"test/api/**/*.ts\""
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/chai": "^5.2.3",
    "@types/hapi__bell": "^13.0.2",
    "@types/hapi__cookie": "^12.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.6",
    "@types/streamifier": "^0.1.2",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "axios": "^1.13.2",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "form-data": "^4.0.5",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hapi/bell": "^13.1.0",
    "@hapi/boom": "^10.0.1",
    "@hapi/cookie": "^12.0.1",
    "@hapi/hapi": "^21.4.4",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "dotenv": "^17.2.3",
    "handlebars": "^4.7.8",
    "hapi-auth-jwt2": "^11.0.0",
    "hapi-swagger": "^17.3.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "lowdb": "^7.0.1",
    "mais-mongoose-seeder": "^1.0.7",
    "mongoose": "^9.1.3",
    "streamifier": "^0.1.1",
    "uuid": "^13.0.0"
  }
}
