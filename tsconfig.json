{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Hapi Backend",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    /* Hier weisen wir TS explizit an, Node und Hapi Typen zu laden */
    "types": ["node", "@types/hapi__hapi", "@types/hapi__bell", "@types/hapi__cookie"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}