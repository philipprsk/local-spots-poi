{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["node"] 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}