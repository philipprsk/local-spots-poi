{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "esnext"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Überspringt die Prüfung der d.ts Dateien in node_modules
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "types": [] // <--- WICHTIG: Setze dies auf ein leeres Array!
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*", "node_modules"]
}