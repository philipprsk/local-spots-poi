{
  "compilerOptions": {
    /* Grundlegendes */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    
    /* Pfade - Das löst dein dist-Problem */
    "outDir": "dist",            // Hier landet das fertige JavaScript
    "rootDir": "src",            // Hier sucht der Compiler deinen Code
    "baseUrl": ".",
    
    /* Strenge & Qualität */
    "strict": true,              // Sorgt für sauberen Code
    "skipLibCheck": true,        // Beschleunigt den Build und ignoriert Fehler in node_modules
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,     // Wichtig für Kompatibilität mit bcrypt/hapi
    
    /* Fix für den "Scheiß dist" Fehler */
    "noEmitOnError": true,       // Ein Build wird NUR erstellt, wenn alles fehlerfrei ist (Kein Rumgeeire!)
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],       // Nur Dateien in src/ werden beachtet
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}